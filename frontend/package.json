{
  "name": "wi-pi-touch",
  "version": "0.1.0",
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev -p 3000",
    "dev:electron": "concurrently \"npm:dev\" \"wait-on http://127.0.0.1:3000 && electron ./electron/main.js\"",
    "build": "next build",
    "export": "next export",
    "app": "npm run build && npm run export && electron ./electron/main.js",
    "dist:linux:arm64": "npm run build && npm run export && electron-builder --linux AppImage --arm64",
    "dist:linux:armv7l": "npm run build && npm run export && electron-builder --linux AppImage --armv7l"
  },
  "dependencies": {
    "next": "15.5.2",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^8.0.4"
  },
  "build": {
    "directories": { "output": "dist" },
    "appId": "com.korekim.wi-pi-touch",
    "productName": "Wi-Pi Touch",
    "files": [
      "out/**/*",
      "electron/**/*",
        "package.json"
      ],
      "asar": true,
      "compression": "maximum",
      "linux": {
        "target": "AppImage",
        "category": "Utility",
        "artifactName": "wi-pi-touch-${version}-${arch}.AppImage"
      },
      "extraMetadata": {
        "main": "electron/main.js"
      }
  }
}
